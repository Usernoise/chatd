# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Extended OpenAI API key for photo generation
# If not set, will use the main OPENAI_API_KEY
OPENAI_API_KEY_EXTENDED=your_extended_openai_key_here

# Replicate API Configuration (for AI photo generation)
# Get your token from https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Suno API Configuration (for music generation)
# Get your API key from Suno
SUNO_API_KEY=your_suno_api_key_here

# Optional: OpenAI Model to use
# Default: gpt-4o
# OPENAI_MODEL=gpt-4o

# Optional: Logging level
# Default: INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# Optional: Feature flags
# ENABLE_DIRECTOR_PHOTO=true
# ENABLE_MUSIC_GENERATION=true

# Optional: Custom OpenAI API endpoint
# OPENAI_API_BASE=https://api.openai.com/v1
